{
  "rules": {
    "class-name-format": [
      1,
      {
        "convention": "hyphenatedbem"
      }
    ],
    "mixins-before-declarations": [
      1,
      {
        "exclude": ["bp"]
      }
    ],
    "force-element-nesting": 0,
    "final-newline": 0,
    "leading-zero": 0,
    "no-color-literals": 0,
    "property-sort-order": [
      1,
      {
        "order": [
          "content",
          "box-sizing",
          "opacity",
          "overflow",
          "overflow-x",
          "overflow-y",
          "display",
          "flex",
          "flex-direction",
          "justify-content",
          "align-items",
          "flex-wrap",
          "flex-basis",
          "flex-flow",
          "flex-grow",
          "flex-shrink",
          "align-content",
          "align-self",
          "order",
          "grid-area",
          "grid-auto-columns",
          "grid-auto-flow",
          "grid-auto-rows",
          "grid-column-end",
          "grid-column-gap",
          "grid-column-start",
          "grid-column",
          "grid-gap",
          "grid-row-end",
          "grid-row-gap",
          "grid-row-start",
          "grid-row",
          "grid-template-areas",
          "grid-template-columns",
          "grid-template-rows",
          "grid-template",
          "grid",
          "position",
          "z-index",
          "top",
          "right",
          "bottom",
          "left",
          "width",
          "min-width",
          "max-width",
          "height",
          "min-height",
          "max-height",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "border",
          "border-top",
          "border-right",
          "border-bottom",
          "border-left",
          "border-width",
          "border-style",
          "border-color",
          "outline",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "background",
          "background-color",
          "background-image",
          "background-position",
          "background-size",
          "background-repeat",
          "background-attachment",
          "font-family",
          "font-style",
          "font-weight",
          "font-size",
          "line-height",
          "color",
          "text-transform",
          "text-decoration",
          "text-align",
          "white-space",
          "transform",
          "transition"
        ]
      }
    ]
  }
}