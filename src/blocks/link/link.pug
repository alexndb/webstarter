mixin link(mods, href, text)
  -
    var allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _' + modsList[i].trim();
      }
    }
    
  +b.A(href=href class=`link${allMods}`)&attributes(attributes)= text