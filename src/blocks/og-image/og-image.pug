mixin og-image({src, width, height, alt})
  meta(property='og:image' content=src)
  meta(property='og:image:secure_url' content=src)
  meta(property='og:image:type' content='image/jpeg')
  meta(property='og:image:width' content=`${width || 400}`)
  meta(property='og:image:height' content=`${height || 300}`)
  meta(property='og:image:alt' content=`${alt || 'alt'}`)

//- Вызов:

  +og-image({
      src: 'http://example.jpg'
    })

  +og-image({
      src: 'http://example.jpg',
      width: 400,
      height: 300,
      alt: 'alt'
    })