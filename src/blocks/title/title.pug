mixin title(topText, middleText, bottomText, mods)
  -
    var allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
    var modsList = mods.split(',');
    for (var i = 0; i < modsList.length; i++) {
    allMods = allMods + ' title--' + modsList[i].trim();
    }
    }

  +b.title(class=`${allMods}`)&attributes(attributes)
    +e.H1.top-text= topText

    if (middleText)
      +e.P.middle-text= middleText

    if (bottomText)
      +e.P.bottom-text= bottomText