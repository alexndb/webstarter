mixin title(type, mods, text)
  -
    var allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _' + modsList[i].trim();
      }
    }

  if (type === 'h1')
    +b.H1(class=`title${allMods}`)&attributes(attributes)= text
  else if (type === 'h2')
    +b.H2(class=`title${allMods}`)&attributes(attributes)= text
  else if (type === 'h3')
    +b.H3(class=`title${allMods}`)&attributes(attributes)= text
  else if (type === 'h4')
    +b.H4(class=`title${allMods}`)&attributes(attributes)= text
  else if (type === 'h5')
    +b.H5(class=`title${allMods}`)&attributes(attributes)= text
  else if (type === 'h6')
    +b.H6(class=`title${allMods}`)&attributes(attributes)= text