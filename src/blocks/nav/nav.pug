mixin nav(mods, navName, activeLink)
  -
    const nav = {
      mainNav: [
        {title: 'Главная', href: '/', target: '_self', scroll: false},
        {title: 'Корзина', href: '#', target: '_self', scroll: true},
        {title: 'О компании', href: '#', target: '_self', scroll: true},
        {title: 'Блог', href: '#', target: '_blank', scroll: false}
      ]
    }
    const blockName = 'nav'
  include ../../pug/allMods

  nav(class=allMods)&attributes(attributes)
    ul.nav__list
      each link in nav[navName]
        li.nav__item
          a.nav__link(href=link.href, target=link.target, class=`${link.scroll ? 'js-scroll' : ''} ${link.href === activeLink ? 'nav__link--active' : ''}`)= link.title

//- Вызов:

  +nav('type1', 'mainNav', '/')